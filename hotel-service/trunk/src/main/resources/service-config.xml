<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="mapper" class="org.dozer.DozerBeanMapper">
        <property name="customConverters">
            <list>
                <ref bean="userEntityConverter"/>
                <ref bean="roomEntityConverter"/>
                <ref bean="passwordConverter"/>
            </list>
        </property>
        <property name="mappingFiles">
            <list>
                <value>dozerBeanMapping.xml</value>
            </list>
        </property>
    </bean>
    <bean id="userEntityConverter" class="ru.yandex.zhmyd.hotel.service.mapper.converter.UserEntityToLongConverter"/>
    <bean id="roomEntityConverter" class="ru.yandex.zhmyd.hotel.service.mapper.converter.RoomEntityToIntegerConverter"/>
    <bean id="passwordConverter" class="ru.yandex.zhmyd.hotel.service.mapper.converter.UserPasswordToHashcodeConverter"/>

</beans>